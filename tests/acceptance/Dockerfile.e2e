FROM ubuntu:24.04 AS builder

WORKDIR /app

# Install curl for mise installation
RUN apt-get update && apt-get install -y curl git && \
    rm -rf /var/lib/apt/lists/*

# Install mise for tool management
RUN curl https://mise.jdx.dev/install.sh | sh
ENV PATH="/root/.local/bin:$PATH"

# Copy mise configuration first to leverage Docker layer caching
COPY mise.toml ./

# Install all tools (Go, Node.js, npm, etc.)
RUN mise install

# Copy go modules and download dependencies
COPY go.mod go.sum ./
RUN mise exec -- go mod download

# Copy source code
COPY cmd/ ./cmd/
COPY pkg/ ./pkg/
COPY VERSION.txt ./

# Build the application
RUN mise run build

# Build acceptance tests as binary
COPY tests/ ./tests/
RUN mise exec -- go test -c -o acceptance-tests ./tests/acceptance/

# Use ubuntu:24.04 for runtime
FROM ubuntu:24.04

# Install basic tools
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    netcat-openbsd \
    sysstat \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Copy kodelet binary and acceptance tests from builder
COPY --from=builder /app/bin/kodelet /usr/local/bin/kodelet
COPY --from=builder /app/acceptance-tests /usr/local/bin/acceptance-tests

# Run acceptance tests
CMD ["/usr/local/bin/acceptance-tests", "-test.v"]