FROM debian:12-slim AS builder

WORKDIR /app

# Install basic dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    ca-certificates \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install mise
SHELL ["/bin/bash", "-o", "pipefail", "-c"]
ENV MISE_DATA_DIR="/mise"
ENV MISE_CONFIG_DIR="/app"
ENV MISE_CACHE_DIR="/mise/cache"
ENV MISE_INSTALL_PATH="/usr/local/bin/mise"
ENV PATH="/mise/shims:$PATH"

RUN curl https://mise.run | sh

# Copy mise configuration and VERSION.txt first (needed for env templates)
COPY mise.toml ./
COPY VERSION.txt ./

# Install tools defined in mise.toml (go, node, npm, etc.)
RUN mise install

# Copy go modules and install dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY cmd/ ./cmd/
COPY pkg/ ./pkg/

# Build the application using mise
RUN mise run build

# Build acceptance tests as binary
COPY tests/ ./tests/
RUN go test -c -o acceptance-tests ./tests/acceptance/

# Use ubuntu:24.04 for runtime
FROM ubuntu:24.04

# Install basic tools
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    netcat-openbsd \
    sysstat \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Copy kodelet binary and acceptance tests from builder
COPY --from=builder /app/bin/kodelet /usr/local/bin/kodelet
COPY --from=builder /app/acceptance-tests /usr/local/bin/acceptance-tests

# Run acceptance tests
CMD ["/usr/local/bin/acceptance-tests", "-test.v"]
